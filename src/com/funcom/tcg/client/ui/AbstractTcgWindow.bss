root {
  /* window font color */
  color: #FFFFFF;
  font: "Screengem" bold 18;
  text-effect: "outline";
  effect-size: 2;
  effect-color: #000000;
  tooltip: tooltip;
}

tooltip_window {
  /*background: solid #11294CAA;*/
