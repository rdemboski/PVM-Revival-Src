root{
    color: #FFFFFF;
  font: "Screengem" bold 18;
  text-effect: "outline";
  effect-size: 2;
  effect-color: #000000;
  tooltip:tooltip;
}

window{
    background: solid #00000000;
}

top_window{
    background: solid #000000;
}

bottom_window{
    background: solid #000000;
}

progress.health.player1 {
  progress_list: "gui/v3/duel/health_player1.png" scalexy;
  active_progress_list: "gui/v3/duel/health_diff_player1.png" scalexy;
}

progress.health.player2 {
  progress_list: "gui/v3/duel/health_player2.png" scalexy;
  active_progress_list: "gui/v3/duel/health_diff_player2.png" scalexy;
}

progress.health.bgd {
  background: solid #000000;
}

progress.mana.player1 {
  progress_list: "gui/v3/duel/mana_player1.png" scalexy;
  active_progress_list: "gui/v3/duel/mana_diff_player1.png" scalexy;
}

progress.mana.bgd.player1 {
  background: image "gui/v3/duel/mana_bgd_player1.png" scalexy;
}

progress.mana.player2 {
  progress_list: "gui/v3/duel/mana_player2.png" scalexy;
